<resources>
    <!-- Base application theme. -->
    <style name="Theme.GithubUser" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/app_backround_dark</item>
        <!-- Customize your theme here. -->
        <item name="textColor">@color/white</item>
        <item name="cardColor">@color/card_background_dark</item>
        <item name="bgColor">@color/app_backround_dark</item>
        <item name="bottomNavColor">@color/bottomnav_background_dark</item>
        <item name="navUnselectedColor">@color/white</item>
        <item name="textGrayColor">@color/gray_dark</item>
    </style>

    <style name="textStyleTemp">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="textStyleTemp.detailStats">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="textStyleTemp.detailStats.title">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textStyleTemp.detailName">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="searchViewStyle">
        <item name="android:textColorHint">?attr/textGrayColor</item>
        <item name="android:editTextColor">?attr/textGrayColor</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="switchTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/primary_color</item>
        <item name="android:colorForeground">?attr/textGrayColor</item>

    </style>
</resources>